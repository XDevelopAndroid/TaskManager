<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyle</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>
    </style>

    <style name="Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Header">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/todoItemHeader</item>
    </style>

    <style name="Text.Info">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
        <item name="maxLines">1</item>
        <item name="android:textColor">@color/todoItemInfo</item>
    </style>

    <style name="Text.EditText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/todoItemInfo</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#995A5A5A</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

</resources>
